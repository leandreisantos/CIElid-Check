<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <TextView
        android:visibility="gone"
        android:id="@+id/tv_info_mi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Details"
        android:drawableStart="@drawable/info_icon"
        android:drawableTint="@color/black"
        android:textColor="@color/grey"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tv_edit_mi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Room"
        android:drawableStart="@drawable/edit_icon"
        android:drawableTint="@color/black"
        android:textColor="@color/grey"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_info_mi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tv_delete_ei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Room"
        android:drawableStart="@drawable/delete_icon"
        android:drawableTint="@color/red"
        android:textColor="@color/grey"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_mi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>