<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RoomWeekActivity">

    <TextView
        android:id="@+id/tv_back_arw"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/lbl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Schedule"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_back_arw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_monday_arw"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_outline_bg"
        android:text="MONDAY"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lbl_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_tues_arw"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_outline_bg"
        android:text="TUESDAY"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lbl_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_wed_arw"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_outline_bg"
        android:text="WEDNESDAY"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_monday_arw"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_thurs_arw"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_outline_bg"
        android:text="THURSDAY"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_tues_arw"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_fri_arw"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_outline_bg"
        android:text="FRIDAY"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_wed_arw"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_sat_arw"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_outline_bg"
        android:text="SATURDAY"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_thurs_arw"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_sun_arw"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_outline_bg"
        android:text="SUNDAY"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_fri_arw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loginlot"
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sun_arw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_rawRes="@raw/weeklot"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>