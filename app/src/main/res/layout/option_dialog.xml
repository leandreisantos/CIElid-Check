<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Permission Login"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_user_dia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        app:layout_constraintTop_toBottomOf="@id/tv_title_dia"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/et_pass_dia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        app:layout_constraintTop_toBottomOf="@id/et_user_dia"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tv_sg"
        app:layout_constraintTop_toBottomOf="@id/et_pass_dia"
        app:layout_constraintRight_toLeftOf="@id/cv_la"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_la"
        app:layout_constraintTop_toBottomOf="@id/et_pass_dia"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/red">

        <ImageButton
            android:id="@+id/buttonSignIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_icon"
            android:background="@color/red"
            />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>